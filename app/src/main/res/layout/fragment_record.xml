<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".page.record.RecordFragment">

   <fragment

       android:id="@+id/map_view"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_above="@+id/button_controller"
       android:name="com.google.android.gms.maps.SupportMapFragment">
   </fragment>
    <LinearLayout
        android:id="@+id/button_controller"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginBottom="16dp"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:weightSum="2">
                <TextView
                    android:id="@+id/record_distance_tv"
                    android:text="-- m"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:id="@+id/record_speed_tv"
                    android:text="--- m/s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <Chronometer
                android:id="@+id/chronometer"
                android:text="00:00:00"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_height="wrap_content">
            </Chronometer>
        </LinearLayout>
        <ImageButton
            android:id="@+id/pause_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_pause"
            android:visibility="visible">
        </ImageButton>
        <LinearLayout
            android:id="@+id/pausing_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageButton
                android:id="@+id/resume_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_refresh"
                android:layout_marginRight="16dp"
             >
            </ImageButton>
            <ImageButton
                android:id="@+id/stop_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_stop"
                >
            </ImageButton>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>